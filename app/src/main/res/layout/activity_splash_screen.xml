<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SplashScreen">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:text="Airborne Radar Blindzone Diagram"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="50dp"
        android:rotation="90"
        android:src="@drawable/image2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/orgname"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imageView2"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/issa" />

        <!--<ImageView-->
            <!--android:layout_marginRight="90dp"-->
            <!--android:layout_width="500dp"-->
            <!--android:layout_height="80dp"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/drdo" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/orgname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="Institute for Systems Studies and Analyses \nDefence Research and Development Organization"
        android:textAlignment="center"
        android:textColor="#000000" />
</RelativeLayout>